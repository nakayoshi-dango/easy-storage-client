<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="0dp">

    <ImageView
        android:id="@+id/imgPerfil"
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="132dp"
        android:background="#9D9D9D"
        android:contentDescription="Imagen de perfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:padding="8dp"
        android:text="Nombre"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imgPerfil"
        app:layout_constraintTop_toTopOf="@id/imgPerfil" />

    <!-- Caja: Rol -->
    <TextView
        android:id="@+id/txtRol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:text="Rol"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/txtNombre"
        app:layout_constraintTop_toBottomOf="@id/txtNombre" />

    <!-- Caja: N° Colecciones -->

    <!-- Caja: N° Productos -->

    <!-- Botón: Cerrar sesión -->

    <!-- Botón: Ayuda -->

    <!-- Icono Configuración -->

    <!-- Botones inferiores redondos -->

    <TextView
        android:id="@+id/txtProductos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:text="N° productos"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txtRol"
        app:layout_constraintTop_toBottomOf="@+id/txtRol" />

    <TextView
        android:id="@+id/txtFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:text="Fecha de creación"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txtProductos"
        app:layout_constraintTop_toBottomOf="@+id/txtProductos" />

    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="236dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="@color/main"
        android:text="Cerrar sesión"
        android:textColor="#BFFF0000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgPerfil" />

    <Button
        android:id="@+id/btnAyuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:backgroundTint="@color/main"
        android:text="Ayuda"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnCerrarSesion" />


</androidx.constraintlayout.widget.ConstraintLayout>
